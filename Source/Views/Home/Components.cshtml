@model Source.Controllers.Product
@{
    ViewBag.Title = "Components";
}

<!--CONTENT-->
<div class="container">
    <section>
        <div class="separator">
            <h2>Typography</h2>
            <span class="roboto-regular">Roboto Regular Fonts</span><br />
            <span class="roboto-medium">Roboto Medium Fonts</span><br />
            <span>Non Roboto Fonts</span>
            <i class="material-icons">face</i>
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Input Time</h2>

            @Html.Kendo().TextBoxFor(m => m.ProductID)
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Drop Down</h2>

            @(Html.Kendo().DropDownList()
          .Name("products")
          .DataTextField("ProductName")
          .DataValueField("ProductID")
          .HtmlAttributes(new { style = "width:250px" })
          .Filter("contains")
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetData", "Home");
              })
              .ServerFiltering(true);
          })
            )
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Multi Select</h2>
            @(Html.Kendo().MultiSelect()
          .Name("optional")
          .AutoClose(false)
          .Placeholder("Select attendees...")
          .BindTo(new List<string>() {
              "Steven White",
              "Nancy King",
              "Anne King",
              "Nancy Davolio",
              "Robert Davolio",
              "Michael Leverling",
              "Andrew Callahan",
              "Michael Suyama",
              "Anne King",
              "Laura Peacock",
              "Robert Fuller",
              "Janet White",
              "Nancy Leverling",
              "Robert Buchanan",
              "Andrew Fuller",
              "Anne Davolio",
              "Andrew Suyama",
              "Nige Buchanan",
              "Laura Fuller"
          })
            )
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Grid</h2>
            @(Html.Kendo().Grid<Source.Controllers.Product>()
        .Name("grid")
        .Scrollable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetDatas", "Home"))
        )
            )
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Buttons & Notification</h2>
            @*ALERTS*@
            <div class="separator">
                <button type="button" class="k-button k-primary" id="btnAlert1">Notification Sent Successfully</button>
                <button type="button" class="k-button" id="btnAlert2">Notification Sent Failed</button>
                <button type="button" class="k-button" id="btnAlert3">Notification Vessel Arrived</button>
            </div>
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Cards</h2>
            <div class="card">
                <div class="card-main">
                    <div class="cardtitle">
                        <span>A Reyemi Cargo Clearing &amp; Management Service</span>
                        <span class="pull-right">
                            @Html.Kendo().Menu().Name("dotsMenu").Items(items => { items.Add().Text("").Items(children => { children.Add().Text("Edit").Url("#"); children.Add().Text("Delete").Url("#"); }); })
                        </span>
                    </div>
                    <div class="card-inner col-md-12">
                        <div class="col-md-6">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Voyage</label>
                                    <div class="col-md-8">
                                        <span class="form-control no-border">3AS</span>
                                    </div>
                                </div>
                            </form>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Voyage</label>
                                    <div class="col-md-8">
                                        <span class="form-control no-border">3AS</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">ETA/ATA</label>
                                    <div class="col-md-8">
                                        <span class="form-control no-border">23/05/2015 00:00</span>
                                    </div>
                                </div>
                            </form>
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">ETD/ATD</label>
                                    <div class="col-md-8">
                                        <span class="form-control no-border">23/05/2015 00:00</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-action col-md-12">
                        <ul>
                            <li class="card-icons">
                                <span>Call Request</span>
                                <i class="material-icons">archive</i>
                            </li>
                            <li class="card-icons">
                                <span>Loading List</span>
                                <i class="material-icons">border_color</i>
                            </li>
                            <li class="card-icons">
                                <span>Manifest</span>
                                <a data-toggle="modal" href="#modal-big"><i class="material-icons blue">add_circle</i></a>
                            </li>
                            <li class="card-icons">
                                <span>Discharge List</span>
                                <i class="material-icons red">report_problem</i>
                            </li>
                            <li class="card-icons">
                                <span>Alerts</span>
                                <i class="material-icons yellow">report_problem</i>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Calendar Date time picker</h2>
            <div class="input-group date form_datetime" data-date="2015-30-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                <input class="k-textbox" type="text" value="" readonly>
                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
            </div>
            <input type="hidden" id="dtp_input1" value="" />
        </div>
    </section>

    <section>
        <div class="separator">
            <h2>Pop Up</h2>
            @(Html.Kendo().Window().Name("kwindow").Title("Pop Up Example").Content("Loading Content").Iframe(true).Draggable().Width(600).Height(300).Actions(action => action.Close()).Events(evt => evt.Close("onClose")).Visible(false).Modal(true).LoadContentFrom("Index", "Home"))
            <button type="button" class="k-button" id="btnWindow">Open Popup</button>
        </div>
    </section>
    @*SAVE/SEND BUTTON*@
    <div class="fbtn-container">
        <div id="menu1" class="fbtn-inner">
            <a class="fbtn fbtn-green fbtn-lg" data-toggle="dropdown" aria-expanded="false">
                @*<span class="fbtn-text">Send</span>*@
                <span class="fbtn-ori icon icon-open-in-new"><i class="material-icons">add</i></span>
                <span class="fbtn-sub icon icon-close"><i class="material-icons">add</i></span>
            </a>
            <div class="fbtn-dropdown">
                <a class="fbtn fbtn-red" href="#"><span class="fbtn-text">Cancel</span><i class="material-icons">clear</i></a>
                <a class="fbtn fbtn-blue" href="#"><span class="fbtn-text">Send</span><i class="material-icons">send</i></a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Waves.attach('#snarl-demo', ['waves-button', 'waves-float']);

    Snarl.setDefaultOptions({
        timeout: 5000
    });

    $('#btnAlert1').click(function () {
        Snarl.addNotification({
            title: 'Message',
            text: 'Message Sent Successfully'
        });
    });
    $('#btnAlert2').click(function () {
        Snarl.addNotification({
            title: 'Message',
            text: 'Message Sending Failed'
        });
    });

    $('#btnAlert3').click(function () {
        Snarl.addNotification({
            title: 'Message',
            text: 'Vessel Arrived to Port'
        });
    });
</script>
<script>
    $(document).ready(function () { $("#btnWindow").bind("click", function () { var window = $("#kwindow").data("kendoWindow"); window.center().open(); }) });
    function onClose(e) {
        //alert("Closing");
    }
</script>
<script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.min.js")"></script>

<script type="text/javascript">
    $('.form_datetime').datetimepicker({
        //language: 'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
</script>
