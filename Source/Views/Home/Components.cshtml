@model Source.Controllers.Product
@{
    ViewBag.Title = "Components";
}

<!--CONTENT-->
<div class="container">
    <section>
        <div class="separator">
            <h2>Typography</h2>
            <span class="roboto-regular">Roboto Regular Fonts</span><br />
            <span class="roboto-medium">Roboto Medium Fonts</span><br />
            <span>Non Roboto Fonts</span>
            <i class="material-icons">face</i>
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Input Time</h2>

            @Html.Kendo().TextBoxFor(m => m.ProductID)
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Drop Down</h2>

            @(Html.Kendo().DropDownList()
          .Name("products")
          .DataTextField("ProductName")
          .DataValueField("ProductID")
          .HtmlAttributes(new { style = "width:250px" })
          .Filter("contains")
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetData", "Home");
              })
              .ServerFiltering(true);
          })
            )
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Date Time</h2>

            @Html.Kendo().DateTimePicker().Name("KendoDT").Value(DateTime.Now)
        </div>
    </section>
    <section>
        <div class="separator">
            <h2>Multi Select</h2>
            @(Html.Kendo().MultiSelect()
          .Name("optional")
          .AutoClose(false)
          .Placeholder("Select attendees...")
          .BindTo(new List<string>() {
              "Steven White",
              "Nancy King",
              "Anne King",
              "Nancy Davolio",
              "Robert Davolio",
              "Michael Leverling",
              "Andrew Callahan",
              "Michael Suyama",
              "Anne King",
              "Laura Peacock",
              "Robert Fuller",
              "Janet White",
              "Nancy Leverling",
              "Robert Buchanan",
              "Andrew Fuller",
              "Anne Davolio",
              "Andrew Suyama",
              "Nige Buchanan",
              "Laura Fuller"
          })
            )
        </div>
    </section>
    <section>
        <div class="separator">
            @(Html.Kendo().Grid<Source.Controllers.Product>()
        .Name("grid")
        .Scrollable()
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetDatas", "Home"))
        )
            )
        </div>
    </section>
    <section>
        <div class="separator">
            @*ALERTS*@
            <div class="separator">
                <button type="button" class="k-button k-primary" id="btnAlert1">Alert Sent Successfully - 1</button>
                <button type="button" class="k-button" id="btnAlert2">Alert Sent Failed - 2</button>
                <button type="button" class="k-button" id="btnAlert3">Alert Vessel Arrived - 3</button>
            </div>
        </div>
    </section>
    <section>
        <div class="card">
            <div class="card-main">
                <div class="cardtitle">
                    <span>A Reyemi Cargo Clearing &amp; Management Service</span>
                    <ul class="nav nav-list pull-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <i class="material-icons"></i>
                            </a>
                            <ul class="dropdown-menu" style="max-width: 1111.5px;">
                                <li>
                                    <a href="javascript:void(0)"><span class="icon margin-right-half">Edit</span></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><span class="icon margin-right-half">Delete</span></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><span class="icon margin-right-half">Select</span></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-inner">
                    <div class="col-md-6">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Voyage</label>
                                <div class="col-md-8">
                                    <span class="form-control no-border">3AS</span>
                                </div>
                            </div>
                        </form>
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-4 control-label">Voyage</label>
                                <div class="col-md-8">
                                    <span class="form-control no-border">3AS</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-4 control-label">ETA/ATA</label>
                                <div class="col-md-8">
                                    <span class="form-control no-border">23/05/2015 00:00</span>
                                </div>
                            </div>
                        </form>
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-4 control-label">ETD/ATD</label>
                                <div class="col-md-8">
                                    <span class="form-control no-border">23/05/2015 00:00</span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-action">
                    <ul>
                        <li class="card-icons">
                            <span>Call Request</span>
                            <i class="material-icons">archive</i>
                        </li>
                        <li class="card-icons">
                            <span>Loading List</span>
                            <i class="material-icons">border_color</i>
                        </li>
                        <li class="card-icons">
                            <span>Manifest</span>
                            <a data-toggle="modal" href="#modal-big"><i class="material-icons blue">add_circle</i></a>
                        </li>
                        <li class="card-icons">
                            <span>Discharge List</span>
                            <i class="material-icons red">report_problem</i>
                        </li>
                        <li class="card-icons">
                            <span>Alerts</span>
                            <i class="material-icons yellow">report_problem</i>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="card">
            @(Html.Kendo().Window().Name("kwindow").Title("Model Window").Content("Loading Content").Iframe(true).Draggable().Resizable().Width(600).Actions(action => action.Maximize().Minimize().Close()).Events(evt => evt.Close("onClose")).Visible(false).Modal(true).LoadContentFrom("Index", "Home"))
            <div class="demo-sectiongrid">
                <button type="button" class="k-button" id="btnWindow">Open Popup</button>
            </div>
        </div>

    </section>

    <div class="fbtn-container">
        <div id="menu1" class="fbtn-inner">
            <a class="fbtn fbtn-red fbtn-lg" data-toggle="dropdown" aria-expanded="false"><span class="fbtn-text">Links</span><span class="fbtn-ori icon icon-open-in-new"></span><span class="fbtn-sub icon icon-close"></span></a>
            <div class="fbtn-dropdown">
                <a class="fbtn" href="#" target="_blank"><span class="fbtn-text">Fork me on GitHub</span><span class="fa fa-github"></span></a>
                <a class="fbtn" href="#" target="_blank"><span class="fbtn-text">Fork me on GitHub</span><span class="fa fa-github"></span></a>
                <a class="fbtn fbtn-blue" href="https://twitter.com/daemonites" target="_blank"><span class="fbtn-text">Send</span><span class="fa fa-twitter"></span></a>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        Waves.attach('#snarl-demo', ['waves-button', 'waves-float']);

        Snarl.setDefaultOptions({
            timeout: 5000
        });

        $('#btnAlert1').click(function () {
            Snarl.addNotification({
                title: 'Message',
                text: 'Message Sent Successfully'
            });
        });
        $('#btnAlert2').click(function () {
            Snarl.addNotification({
                title: 'Message',
                text: 'Message Sending Failed'
            });
        });

        $('#btnAlert3').click(function () {
            Snarl.addNotification({
                title: 'Message',
                text: 'Vessel Arrived to Port'
            });
        });
    </script>
    <script>
        $(document).ready(function () { $("#btnWindow").bind("click", function () { var window = $("#kwindow").data("kendoWindow"); window.center().open(); }) });
        function onClose(e) {
            alert("Closing");
        }
    </script>
